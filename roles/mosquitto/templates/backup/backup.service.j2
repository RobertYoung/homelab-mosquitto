[Unit]
Description=Run {{ mosquitto_service_name }} backup
OnFailure=mail-systemd-failure@%n.service

[Service]
Type=oneshot
WorkingDirectory={{ mosquitto_service_config_dir }}
ExecStartPre=/usr/bin/docker compose up -d backup-toolkit
ExecStart=/usr/bin/docker exec backup-toolkit /bin/bash -c "./backup.sh"
